<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @event.content %>
</p>

<% unless @event.user_id == current_user.id %>
  <% if @apply.present? %>
    <%= link_to 'キャンセルする', apply_path(id: @apply.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to '参加する', applies_path(event_id: @event.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
